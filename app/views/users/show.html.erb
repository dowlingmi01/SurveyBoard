<header>
	<h1><%= @user %>'s Surveys Created</h1>

	<ul class="actions">
		<li><%= link_to "Start Survey", new_survey_path, class: "new" if policy(Survey).new?%></li>
	</ul>
</header>

<% if @user.organized_surveys.any? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Survey</th>
				<th>Start Date</th>
				<th>End Date</th>
				<th>Survey Status</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @user.organized_surveys.reverse.each do |survey| %>
				<tr>
					<td><%= link_to survey.survey_name, survey_path(survey) %></td>
					<td><%= time_format(survey.start_date) %></td>
					<td><%= time_format(survey.end_date) %></td>
					<td><%= time_format(survey.start_date) %></td>
					<td><%= survey_status(survey) %></td>

					<td>
						<%= link_to "Edit", edit_survey_path(survey), class: "edit" %>
						<%= link_to "Delete", survey_path(survey), method: :delete, data: {confirm: "Are you sure?"}, class: "delete" %>
					</td>

				</tr>
			<% end %>
		</tbody>
	</table>
	<% else %>
	<p><%= @user.organization_name %> has no events yet</p>
<% end %>