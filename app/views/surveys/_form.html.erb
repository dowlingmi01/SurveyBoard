<% if @survey.errors.any?%>
	<div id="error_explanation">
		<h2><%= pluralize(@survey.errors.count, "error") %> prohibited this event from being saved:</h2>

		<ul>
			<%survey.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(survey) do |f| %>
	<div>
		<%= f.label :survey_name %>
		<%= f.text_field :survey_name %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label :start_date %>
		<%= f.datetime_select(:start_date, order: [:month, :day, :year], start_year: Date.current.year, smpm: true, prompt: true) %>
	</div>
	<div>
		<%= f.label :end_date %>
		<%= f.datetime_select(:end_date, order: [:month, :day, :year], start_year: Date.current.year, smpm: true, prompt: true)  %>
	</div>
	<div>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</div>

	<%= f.submit %>

<% end %>
